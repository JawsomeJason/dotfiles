#!/usr/bin/env bash

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.cask` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Install native apps
brew tap caskroom/versions
brew tap phinze/homebrew-cask
brew install brew-cask

# update if already installed
brew update && brew upgrade brew-cask && brew cleanup && brew cask cleanup # && is your friend :)

function installcask() {
	brew cask install "${@}"
}


# WORK
installcask dropbox		# files in cloud
installcask firefox-beta	# browser
installcask growler		# notifications
installcask growlnotify		# notifications 
installcask parallels-desktop   # vm
installcask sublime-text3	# text editor
installcask the-unarchiver	# file compression manager
installcask virtualbox		# vm
installcask vlc			# video viewer

# HOME
installcask airvpn			# vpn
installcask couchpotato			# movies
installcask kindle			# kindle reader
installcask miro-video-converter	# video conversion
installcask nosleep			# torrents
installcask send-to-kindle		# kindle uploader
installcask sonarr			# tv
installcask sonarr-menu			# tv helper
installcask tor-browser			# private browser
installcask transmission		# torrents

# ALL
installcask 1password			# Password management
installcask adobe-air
installcask alfred			# replacement for spotlight
installcask asepsis			# hide .ds_store files
installcask bartender                   # menu bar organizer
installcask bettertouchtool		# better touch gestures
installcask calibre 			# e-reader and conversion tool
installcask cheatsheet			# shortcut cheatsheet
installcask coconutbattery		# battery monitoring
installcask cyberduck			# ftp
installcask daisydisk			# disk space
installcask dash			# programming documentation tool
installcask deeper			# features
installcask divvy                       # window management
installcask flux			# better screen viewing at night
installcask google-chrome-beta
installcask google-drive
installcask imageoptim			# easy image optimization
installcask iterm2			# terminal replacement
installcask licecap			# easy screen recording to GIF
installcask logitech-control-center	# mouse
installcask logitech-unifying	        # mouse
installcask maintenance			# maintenance
installcask onyx 			# monitoring
installcask xtrafinder			# finder enhancements

# Make sure alfred can find casks
brew cask alfred link

# Remove outdated versions from the cellar
brew cleanup
