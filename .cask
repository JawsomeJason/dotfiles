#!/usr/bin/env bash

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.cask` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Install native apps
brew tap caskroom/versions
brew tap phinze/homebrew-cask
brew install brew-cask

function installcask() {
	brew cask install "${@}"
}


# WORK
installcask dropbox
installcask firefox
installcask imageoptim
installcask sublime-text-3
installcask the-unarchiver
installcask virtualbox
installcask vlc
installcask growlnotify

# HOME
installcask miro-video-converter
installcask tor-browser
installcask utorrent
installcask tvshows
installcask nosleep

# ALL
installcask google-chrome
installcask adobe-air
installcask alfred
installcask bettertouchtool
installcask dash
installcask growler
installcask flux
installcask totalfinder
installcask asepsis
installcask logitech-unifying
installcask daisydisk
installcask lastpass-universal
#installcask hands-off

# Make sure alfred can find casks
brew cask alfred link

# Remove outdated versions from the cellar
brew cleanup
